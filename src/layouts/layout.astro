---
export interface Props {
  title?: string;
}

const { title = "Mais que Sites" } = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="w-screen h-screen flex items-center justify-center gap-2 p-4">
      <slot />
    </div>
  </body>
</html>
